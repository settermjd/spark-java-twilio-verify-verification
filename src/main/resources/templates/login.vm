<h1>Login</h1>

#set ( $class = "" )
#if ( $error )
#set ( $class = "error" )
<div class="$class">$error</div>
#end
<form method="post" action="/login">
    <div class="$class">
        <label for="username">Username</label>
        <input name="username" id="username" tabindex="1" value="">
    </div>
    <input type="submit"
           name="submit"
           tabindex="2"
           value="Request verification code">
</form>